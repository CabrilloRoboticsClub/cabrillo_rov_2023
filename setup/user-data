#cloud-config

# ubuntu cloud init file
# https://cloud-init.io/


users:
- name: ubuntu
  sudo: ALL=(ALL) NOPASSWD:ALL
  ssh_import_id:
    - gh: cabrillorobotics
    - gh: mike-matera

chpasswd:
  expire: false
  list:
  - ubuntu:Cabri11o

# enable ssh password auth
ssh_pwauth: true

# set hostname to SeaHawk
hostname: SeaHawk

# update packages (apt)
packages_update: true

# reboot when finished
power_state:
  mode: reboot

ansible:
  install_method: distro
  pull:
    url: "https://github.com/CabrilloRoboticsClub/cabrillo_rov_2023.git"
    playbook_name: rpi.yml
    playbook_dir: setup/