#cloud-config

# ubuntu cloud init file
# https://cloud-init.io/

# set ubuntu password to funny cabrillo
chpasswd:
  expire: false
  list:
  - ubuntu:Cabri11o

# import ssh keys from github
ssh_import_id:
- ubuntu
- gh: cabrillorobotics

# enable ssh password auth
ssh_pwauth: true

# set hostname to SeaHawk
hostname: SeaHawk-ROV

# update packages (apt)
package_update: true

# upgrade packages (apt)
package_upgrade: true

# install packages (apt)
packages:
  - sshpass
  - git

# reboot when finished
power_state:
  mode: reboot
